<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark" 
	width="12" height="12"
	alpha.disabled="0.5">
	
	<fx:Metadata>
		[HostComponent("br.com.gohlsolucoes.controls.GButton")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<!-- circle -->
	<s:Ellipse width="12" height="12">
		<s:fill>
			<s:SolidColor id="circleFill" color="#ffffff" alpha="0.2" alpha.over="0.4" alpha.down="0.4" />
		</s:fill>
	</s:Ellipse>
	
	<!-- x -->
	<s:Group x="6" y="6">
		<s:Path rotation="45">
			<s:data>M -1,-4 L 1,-4 1,-1 4,-1 4,1 1,1 1,4 -1,4 -1,1 -4,1 -4,-1 -1,-1, Z</s:data>
			<s:fill>
				<s:SolidColor id="xFill" color="#eeeeee" color.over="#ffffff" />
			</s:fill>
		</s:Path>
	</s:Group>
</s:SparkSkin>
